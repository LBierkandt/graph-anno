%form#modal-form.metadata{ :onsubmit => 'sendModal("metadata"); return false;', :onreset => 'closeModal(); return false;' }
  #modal-warning.error_message
  %div.modal-form-element
    %table
      %tbody
        %tr
          %th{ :colspan => 2 } Metadata
        %tr
          %th Key
          %th Value
        - if graph.info.length == 0
          = haml :metadata_form_row, :locals => {:i => 0}
        - else
          - graph.info.keys.each_with_index do |key, i|
            = haml :metadata_form_row, :locals => {:i => i, :key => key, :graph => graph}
      %tbody
        %tr
          %td{:colspan => 2}
            %button{:onclick => 'newFormSegment("metadata_form_row", ".metadata"); return false;'}
              Add metadata annotation

  #modal-submit.bottom-block
    %input{ :type => 'reset', :value => 'Cancel' }
    %input{ :type => 'submit', :value => 'Save' }
