%form#modal-form.tagset{ :onsubmit => 'sendModal("tagset"); return false;', :onreset => 'closeModal(); return false;' }
  #modal-warning.error_message
  %div.modal-form-element
    %table
      %tbody
        %tr
          %th{ :colspan => 2 } Tagset
        %tr
          %th Key
          %th Value
        - if graph.tagset.empty?
          %tr{:no => '0'}
            %td
              %input{:name => "keys[0]", :type => 'text', :value => ''}
            %td
              %textarea{:name => "values[0]"}
        - else
          - graph.tagset.each_with_index do |rule, i|
            %tr{:no => i}
              %td
                %input{:name => "keys[#{i}]", :type => 'text', :value => rule.key}
              %td
                %textarea{:name => "values[#{i}]"}
                  = rule.values_string
      %tbody
        %tr
          %td{:colspan => 2}
            %button{:onclick => 'newTagsetRule(); return false;'}
              Add new key-values pair

  #modal-submit.bottom-block
    %input{ :type => 'reset', :value => 'Cancel' }
    %input{ :type => 'submit', :value => 'Save' }
