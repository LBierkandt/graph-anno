%form#modal-form.pref{ :onsubmit => 'savePref(); return false;', :onreset => 'closeModal(); return false;' }
  %div.modal-form-element
    %table
      %tbody
        %tr
          %th Preferences
    %table
      %tbody
        %tr
          %th{:colspan => 3} Autocompletion
        %tr
          %td
            %input#autocompletion{:name => 'autocompletion', :type => 'checkbox', :value => true}
          %td{:colspan => 2}
            %label{:for =>'autocompletion'}
              enable command line autocompletion
        %tr
          %td
          %td
            %input.autocompletion#command{:name => 'command', :type => 'checkbox', :value => true}
          %td
            %label{:for =>'command'}
              commands
        %tr
          %td
          %td
            %input.autocompletion#file{:name => 'file', :type => 'checkbox', :value => true}
          %td
            %label{:for =>'file'}
              file names
        %tr
          %td
          %td
            %input.autocompletion#anno{:name => 'anno', :type => 'checkbox', :value => true}
          %td
            %label{:for =>'anno'}
              annotations

  #modal-submit.bottom-block
    %input{ :type => 'reset', :value => 'Cancel' }
    %input{ :type => 'submit', :value => 'Save' }
