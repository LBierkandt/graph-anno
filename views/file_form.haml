%form#modal-form.file{ :name => 'config', :onsubmit => 'sendModal("file"); return false;', :onreset => 'closeModal(); return false;' }
  %div.modal-form-element
    %table
      %tbody
        %tr
          %th{:colspan => 3} File settings
        %tr
          %td
            %input#compact{:name => 'compact', :type => 'checkbox', :value => true, :checked => graph.file_settings[:compact]}
          %td{:colspan => 2}
            %label{:for =>'compact'}
              compact file format
        %tr
          %td
            %input#save-log{:name => 'save_log', :type => 'checkbox', :value => true, :checked => graph.file_settings[:save_log]}
          %td{:colspan => 2}
            %label{:for =>'save-log'}
              save editing history
        -#%tr
        -#  %td
        -#  %td
        -#    %input#separate-log{:name => 'separate_log', :type => 'checkbox', :value => true, :checked => graph.file_settings[:separate_log], :disabled => !graph.file_settings[:save_log]}
        -#  %td
        -#    %label{:for =>'separate-log'}
        -#      save editing history in separate file

  #modal-submit.bottom-block
    %input{ :type => 'reset', :value => 'Cancel' }
    %input{ :type => 'submit', :value => 'Save' }
