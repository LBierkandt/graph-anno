%form#modal-form.allowed_annotations{ :name => 'config', :onsubmit => 'sendAllowedAnnotations(); return false;', :onreset => 'closeModal(); return false;' }
  #modal-warning.error_message
  %div.modal-form-element
    %table
      %tbody
        %tr
          %th{ :colspan => 2 } Allowed annotations
        %tr
          %th Key
          %th Value
        - if graph.allowed_anno.length == 0
          %tr{:no => '0'}
            %td
              %input{:name => "keys[0]", :type => 'text', :value => ''}
            %td
              %textarea{:name => "values[0]"}
        - else
          - graph.allowed_anno.each_with_index do |allowed, i|
            %tr{:no => i}
              %td
                %input{:name => "keys[#{i}]", :type => 'text', :value => allowed[:key]}
              %td
                %textarea{:name => "values[#{i}]"}
                  = allowed[:values].value_list_string
      %tbody
        %tr
          %td{:colspan => 2}
            %button#new-allowed-annotations Add new key-values pair

  #modal-submit.bottom-block
    %input{ :type => 'reset', :value => 'Cancel' }
    %input{ :type => 'submit', :value => 'Save' }
