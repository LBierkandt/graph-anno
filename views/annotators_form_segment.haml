%tr{:no => i}
  %td
    = annotator.id if defined?(annotator) && annotator.id > 0
    %input{:name => "ids[#{i}]", :type => "hidden", :value => defined?(annotator) ? annotator.id : 0}
  %td
    %input{:name => "names[#{i}]", :value => defined?(annotator) ? annotator.name : ''}
  %td.expand
    %textarea{:name => "infos[#{i}]"}
      = defined?(annotator) ? annotator.info : ''
  %td
    .button{:onclick => 'removeElement("tr", this);'}
      delete
      %br
      (incl.&nbsp;annotations)
