%form#modal-form.speakers{ :onsubmit => 'sendModal("speakers"); return false;', :onreset => 'closeModal(); return false;' }
  #modal-warning.error_message
  %div.modal-form-element
    %table
      %tbody
        %tr
          %th{ :colspan => 2 } Speakers
        %tr
          %th ID
          %th Attributes
        - if graph.speaker_nodes == []
          = haml :speakers_form_row, :locals => {:i => 0}
        - else
          - graph.speaker_nodes.each_with_index do |speaker, i|
            = haml :speakers_form_row, :locals => {:i => 0, :speaker => speaker}
      //%tbody
      //  %tr
      //    %td{:colspan => 2}
      //      %button{:onclick => 'newFormSegment(); return false;'}
      //        Add speaker

  #modal-submit.bottom-block
    %input{ :type => 'reset', :value => 'Cancel' }
    %input{ :type => 'submit', :value => 'Save' }
